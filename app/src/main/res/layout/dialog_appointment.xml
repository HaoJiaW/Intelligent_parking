<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView android:layout_width="match_parent"
    android:layout_height="450dp"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="8dp"
    app:cardBackgroundColor="@color/white">
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="450dp"
    android:orientation="vertical"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.9"
        android:orientation="vertical"
        android:gravity="center_vertical"
        android:background="@color/alpha_thirty_grey"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="天虹商场停车场"
            android:layout_marginLeft="20dp"
            android:textSize="22sp"
            android:textColor="@color/black"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="北京市朝阳区左家庄北里58号天虹商场B2层"
            android:layout_marginTop="6dp"
            android:layout_marginLeft="20dp"
            android:textSize="14sp"
            android:textColor="@color/text_colorPrimary"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical">
    <TextView
    android:layout_width="match_parent"
    android:layout_height="24dp"
    android:text="车位何时使用"
    android:layout_marginLeft="22dp"
    android:textSize="16sp"
    android:layout_marginTop="10dp"
    android:textColor="@color/text_colorPrimary"
    />

        <TextView
            android:id="@+id/select_time_tv"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:hint="请选择时间"
            android:layout_marginLeft="20dp"
            android:textColorHint="@color/black"
            android:textSize="20sp"
            android:background="@null"
            android:gravity="center_vertical"
            />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/alpha_seventy_five_grey"
            android:layout_marginLeft="20dp"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="24dp"
            android:text="车辆"
            android:layout_marginLeft="22dp"
            android:textSize="16sp"
            android:layout_marginTop="10dp"
            android:textColor="@color/text_colorPrimary"
            />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:hint="皖H.12345"
            android:layout_marginLeft="20dp"
            android:textColorHint="@color/black"
            android:textSize="20sp"
            android:background="@null"
            />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/alpha_seventy_five_grey"
            android:layout_marginLeft="20dp"
            />
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1.5"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="24dp"
            android:text="预付款"
            android:layout_marginLeft="22dp"
            android:textSize="16sp"
            android:layout_marginTop="10dp"
            android:textColor="@color/text_colorPrimary"
            />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:hint="10.0元"
            android:layout_marginLeft="20dp"
            android:textColorHint="@color/black"
            android:textSize="20sp"
            android:background="@null"
            />


        <Button
            android:id="@+id/login_btn"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_marginTop="14dp"
            android:background="@drawable/button_bg"
            android:layout_marginBottom="14dp"
            android:text="立即预约"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp"
            />


    </LinearLayout>



</LinearLayout>
</android.support.v7.widget.CardView>