<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.MembersActivity"
    android:orientation="vertical"
    android:background="@color/alpha_fifty_grey">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:orientation="horizontal"
        android:background="@color/white"
        >

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <RelativeLayout
            android:layout_width="80dp"
            android:layout_height="45dp"
            android:layout_weight="0.5">

            <ImageView
                android:id="@+id/member_back_img"
                android:layout_centerVertical="true"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginLeft="12dp"
                android:src="@drawable/left_turn"
                android:padding="10dp"
                />

        </RelativeLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="会员中心"
                android:textColor="@color/black"
                android:textSize="18sp" />

        </FrameLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.5">
        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp"
            app:cardCornerRadius="6dp"
            app:cardBackgroundColor="@color/vip_color"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_height="match_parent">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:layout_weight="1">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:orientation="horizontal">
                        <de.hdodenhof.circleimageview.CircleImageView
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:src="@drawable/head_portital_default"
                            android:layout_marginTop="18dp"
                            android:layout_marginLeft="20dp"
                            />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="黑金会员"
                            android:layout_marginTop="22dp"
                            android:layout_marginLeft="6dp"
                            android:textColor="@color/white"
                            />
                    </LinearLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="已开通"
                        android:layout_marginLeft="20dp"
                        android:layout_marginBottom="10dp"
                        android:padding="4dp"
                        android:textColor="@color/vip_color"
                        android:background="@drawable/circle_tv_al_kaitong"
                        />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    >



                </LinearLayout>

            </LinearLayout>



        </android.support.v7.widget.CardView>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:layout_weight="1">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:text="黑金VIP特权"
            android:gravity="center"
            android:textColor="@color/black"/>

        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1.8"
            android:columnCount="3"
            android:rowCount="4"
            android:orientation="horizontal"
            android:paddingTop="5dp"
            >

            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_column="0"
                android:layout_row="0"
                android:layout_height="40dp"
                android:layout_width="40dp"
                android:layout_marginTop="10dp"
                android:src="@drawable/free_service_bill"
               android:padding="5dp"
                android:layout_columnWeight="1"
                android:layout_gravity="center"
                />

            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_column="1"
                android:layout_row="0"
                android:layout_height="40dp"
                android:layout_width="40dp"
                android:layout_marginTop="10dp"
                android:padding="5dp"
                android:src="@drawable/check_bill"
                android:layout_gravity="center"
                android:layout_columnWeight="1"/>

            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_column="2"
                android:layout_row="0"
               android:layout_height="40dp"
                android:layout_width="40dp"
                android:layout_marginTop="10dp"
                android:src="@drawable/car_maintenance"
                android:padding="5dp"
                android:layout_columnWeight="1"
                android:layout_gravity="center"/>

            <TextView
                android:layout_column="0"
                android:layout_row="1"
                android:text="免手续费"
                android:layout_gravity="center"
                />

            <TextView
                android:layout_column="1"
                android:layout_row="1"
                android:text="资金报表"
                android:layout_gravity="center"/>

            <TextView
                android:layout_column="2"
                android:layout_row="1"
                android:text="车辆维修"
                android:layout_gravity="center"/>


            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_column="0"
                android:layout_row="2"
                android:layout_marginTop="20dp"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:src="@drawable/priority_service"
                android:layout_columnWeight="1"
                android:padding="5dp"/>
            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_column="1"
                android:layout_row="2"
                android:layout_marginTop="20dp"
                android:layout_height="40dp"
                android:layout_width="40dp"
                android:src="@drawable/full_reduce"
                android:layout_gravity="center"
                android:layout_columnWeight="1"

                android:padding="5dp"/>
            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_column="2"
                android:layout_row="2"
                android:layout_marginTop="20dp"
                android:layout_height="40dp"
                android:layout_width="40dp"
                android:layout_gravity="center"
                android:src="@drawable/road_rescue"
                android:layout_columnWeight="1"
                android:padding="5dp"/>

            <TextView
                android:layout_column="0"
                android:layout_row="3"
                android:text="服务优先"
                android:layout_gravity="top"
                android:layout_columnWeight="1"
                android:gravity="center"
                />

            <TextView
                android:layout_column="1"
                android:layout_row="3"
                android:text="满减优惠"
                android:layout_gravity="top"
                android:layout_columnWeight="1"
                android:gravity="center"
                />

            <TextView
                android:layout_column="2"
                android:layout_row="3"
                android:text="道路救援"
                android:layout_gravity="top"
                android:layout_columnWeight="1"
                android:gravity="center"/>


        </GridLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

        </LinearLayout>



    </LinearLayout>





</LinearLayout>